# Database
DATABASE_URL=postgresql://username:password@localhost:5432/hirely_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ChromaDB - Vector database for embeddings and semantic search
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_PATH=./chroma_db  # Alias for compatibility

# OpenAI - For text embeddings and advanced AI features
OPENAI_API_KEY=your-openai-api-key

# Groq - Fast LLM inference for question generation and analysis
GROQ_API_KEY=your-groq-api-key

# Deepgram - Real-time speech-to-text transcription
DEEPGRAM_API_KEY=your-deepgram-api-key

# Vapi - Voice AI platform for phone-based interviews
VAPI_API_KEY=your-vapi-api-key
VAPI_PHONE_NUMBER=your-vapi-phone-number

# Supabase - PostgreSQL database and authentication
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key

# File Upload
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIRECTORY=./uploads

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
